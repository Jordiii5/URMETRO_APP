<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ConclusionSpaceJocFragment"
android:background="@drawable/spacebackground">

<ImageView
    android:id="@+id/finalscoretitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/finalscoretitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    tools:ignore="MissingConstraints" />

<ImageView
    android:id="@+id/xwingfrontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:src="@drawable/xwingfrontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/finalscoretitle"
    android:layout_marginHorizontal="10dp"
    tools:ignore="MissingConstraints" />

<TextView
    android:id="@+id/defeatedEnemies"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/xwingfrontal"
    android:text="Punts"
    android:textStyle="bold"
    android:textSize="100sp"
    android:textColor="#FF0000"
    android:fontFamily="@font/tilt_neon"/>

<Button
    android:id="@+id/tryagain"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:text="TORNAR A JUGAR"
    android:textColor="@color/white"
    android:backgroundTint="#FF0000"
    android:fontFamily="@font/tilt_neon"
    android:textStyle="bold"
    android:textSize="40dp"
    app:layout_constraintEnd_toStartOf="@id/backmenu"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/defeatedEnemies"
    app:layout_constraintBottom_toBottomOf="parent"

    />
<Button
    android:id="@+id/backmenu"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:text="TORNAR AL MENU"
    android:textColor="@color/white"
    android:backgroundTint="#FF0000"
    android:fontFamily="@font/tilt_neon"
    android:textStyle="bold"
    android:textSize="40dp"
    app:layout_constraintTop_toBottomOf="@+id/defeatedEnemies"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/tryagain"
    app:layout_constraintBottom_toBottomOf="parent"
    />





</androidx.constraintlayout.widget.ConstraintLayout>