                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/flecha_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/flechas_horizontales"
                app:layout_constraintBottom_toBottomOf="@id/bloc1"
                app:layout_constraintEnd_toEndOf="@id/bloc1"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="@id/bloc1"
                app:layout_constraintWidth_percent="0.2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/codi1"
            app:layout_constraintBottom_toTopOf="@id/codi3"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/bloc2"
                android:layout_width="wrap_content"
