            <Spinner
                android:id="@+id/velocitat4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Velocitat"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/vibracion"
                app:layout_constraintStart_toStartOf="@id/guia7"
                app:layout_constraintEnd_toEndOf="@id/guia7"
                app:layout_constraintTop_toBottomOf="@id/guia7"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/guia8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Repeticions"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/repeticions4"
                app:layout_constraintEnd_toStartOf="@id/vibracion"
                app:layout_constraintTop_toTopOf="@id/bloc4" />

            <Spinner
                android:id="@+id/repeticions4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/programes_personalitzats"
