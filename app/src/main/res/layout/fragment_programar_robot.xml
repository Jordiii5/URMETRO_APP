                android:layout_marginEnd="10dp"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Velocitat"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/flecha_vertical"
                app:layout_constraintStart_toStartOf="@id/guia3"
                app:layout_constraintEnd_toEndOf="@id/guia3"
                app:layout_constraintTop_toBottomOf="@id/guia3"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/guia4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Repeticions"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/repeticions2"
                app:layout_constraintEnd_toStartOf="@id/flecha_vertical"
                app:layout_constraintTop_toTopOf="@id/bloc2" />

            <Spinner
                android:id="@+id/repeticions2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Repeticions"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/flecha_vertical"
                app:layout_constraintStart_toStartOf="@id/guia4"
                app:layout_constraintEnd_toEndOf="@id/guia4"
                app:layout_constraintTop_toBottomOf="@id/guia4"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/flecha_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/flechas_verticales"
                app:layout_constraintBottom_toBottomOf="@id/bloc2"
                app:layout_constraintEnd_toEndOf="@id/bloc2"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="@id/bloc2"
                app:layout_constraintWidth_percent="0.2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/codi2"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/bloc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bloc_moviment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/guia5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Velocitat"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/velocitat3"
                app:layout_constraintEnd_toStartOf="@id/guia6"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/bloc3" />

            <Spinner
                android:id="@+id/velocitat3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Velocitat"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/flecha_curva"
                app:layout_constraintStart_toStartOf="@id/guia5"
                app:layout_constraintEnd_toEndOf="@id/guia5"
                app:layout_constraintTop_toBottomOf="@id/guia5"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/guia6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Repeticions"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/repeticions3"
                app:layout_constraintEnd_toStartOf="@id/flecha_curva"
                app:layout_constraintTop_toTopOf="@id/bloc3" />

            <Spinner
                android:id="@+id/repeticions3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Repeticions"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/flecha_curva"
                app:layout_constraintStart_toStartOf="@id/guia6"
                app:layout_constraintEnd_toEndOf="@id/guia6"
                app:layout_constraintTop_toBottomOf="@id/guia6"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/flecha_curva"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/flecha_curva"
                app:layout_constraintBottom_toBottomOf="@id/bloc3"
                app:layout_constraintEnd_toEndOf="@id/bloc3"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="@id/bloc3"
                app:layout_constraintWidth_percent="0.2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codi4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/codi3"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/bloc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
