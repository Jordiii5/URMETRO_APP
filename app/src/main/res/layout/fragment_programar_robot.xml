                android:clickable="false"
                android:focusable="false"
               android:paddingStart="10dp"
                app:layout_constraintBottom_toBottomOf="@id/flecha_horizontal"
                app:layout_constraintStart_toStartOf="@id/guia1"
                app:layout_constraintEnd_toEndOf="@id/guia1"
                app:layout_constraintTop_toBottomOf="@id/guia1"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/guia2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Repeticions"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/repeticions"
                app:layout_constraintEnd_toStartOf="@id/flecha_horizontal"
                app:layout_constraintTop_toTopOf="@id/bloc1" />

            <Spinner
                android:id="@+id/repeticions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:entries="@array/Repeticions"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@id/flecha_horizontal"
                app:layout_constraintStart_toStartOf="@id/guia2"
                app:layout_constraintEnd_toEndOf="@id/guia2"
                app:layout_constraintTop_toBottomOf="@id/guia2"
