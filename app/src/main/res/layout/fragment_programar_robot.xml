                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/guia9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="Esperar"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/bloc5"
                app:layout_constraintEnd_toStartOf="@id/segons"
                app:layout_constraintTop_toTopOf="@id/bloc5" />

            <Spinner
                android:id="@+id/segons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/programes_personalitzats"
                android:backgroundTint="@color/white"
                android:paddingStart="10dp"
                android:entries="@array/Velocitat"
                app:layout_constraintBottom_toBottomOf="@id/bloc5"
                app:layout_goneMarginEnd="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toStartOf="@id/guia10"
                app:layout_constraintTop_toTopOf="@id/bloc5"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/guia10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_neon"
                android:text="segons"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
