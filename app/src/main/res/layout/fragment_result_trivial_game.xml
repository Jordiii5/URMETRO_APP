<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ResultTrivialGameFragment"
android:background="@drawable/fondo_app2">

<ImageView
    android:id="@+id/titulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/scorefinal"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<ImageView
    android:layout_width="142dp"
    android:layout_height="81dp"
   android:layout_marginTop="30dp"
    android:src="@drawable/estrella"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.808"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titulo"/>

<ImageView
    android:layout_width="142dp"
    android:layout_height="81dp"
    app:layout_constraintTop_toBottomOf="@id/titulo"
    android:layout_marginTop="10dp"
    android:src="@drawable/estrella"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    />

<ImageView
    android:id="@+id/estrella"
    android:layout_width="142dp"
    android:layout_height="81dp"
    android:src="@drawable/estrella"
    android:layout_marginTop="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.187"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titulo"/>

<TextView
    android:id="@+id/score_points"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/tilt_neon"
    android:textStyle="bold"
    android:gravity="center"
    android:text="Puntos"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:textColor="#FF9800"
    android:textSize="100dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/estrella"
    app:layout_constraintWidth_percent="0.5" />

<Button
    android:id="@+id/return_menu_button"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#FF9800"
    android:text="Volver al menu principal"
    android:fontFamily="@font/tilt_neon"
    android:textSize="40dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@id/return_tematica_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/score_points"
    app:layout_constraintBottom_toBottomOf="parent"
   />

<Button
    android:id="@+id/return_tematica_button"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#FF9800"
    android:text="Volver a temÃ¡ticas"
    android:fontFamily="@font/tilt_neon"
    android:textSize="40dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/return_menu_button"
    app:layout_constraintTop_toBottomOf="@id/score_points"
    app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>