<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="20dp"
    android:paddingHorizontal="20dp"
    android:background="@color/fons">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cercle_inicial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintHeight_percent="0.8"
        android:background="@drawable/cercle_contacte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/cercle_inicial"
            app:layout_constraintBottom_toBottomOf="@id/cercle_inicial"
            app:layout_constraintStart_toStartOf="@id/cercle_inicial"
            app:layout_constraintEnd_toEndOf="@id/cercle_inicial"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/nom_contacte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACTE"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/cercle_inicial"
        app:layout_constraintTop_toTopOf="@id/cercle_inicial"
        />
    <TextView
        android:id="@+id/numero_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999999999"
        android:textSize="25dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/cercle_inicial"
        app:layout_constraintBottom_toBottomOf="@id/cercle_inicial"
        android:inputType="phone"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/trucar_boto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintHeight_percent="0.8"
        android:src="@drawable/baseline_local_phone_24"
        android:background="@drawable/cercle_contacte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>